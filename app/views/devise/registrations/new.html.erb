<div class="row justify-content-center align-items-center minh-100">
  <div class="col-10 col-offset-1 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 mt-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="logo">
        <img src="<%= asset_path('icono.png')%>" alt="stackoverflow">
      </div>
      <h2 class="text-center">Bienvenido a StackOverflaw</h2>
      <div class="form-group">
        <%= f.label 'Correo Electronico', class: "font-weight-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label 'Contraseña', class: "font-weight-bold" %>
        <% if @minimum_password_length %>
        <em class="font-italic">(<%= @minimum_password_length %> caracteres minimos)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label 'Confirmar Contraseña', class: "font-weight-bold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <%= f.submit "Continuar", class: "btn btn-dark btn-block" %>
      <div class="links mt-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>