<div class="row justify-content-center">
  <div class="col-8 col-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 mt-3">   
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="text-center">Iniciar Sesión</h2>
      <div class="form-group">
        <%= f.label 'Correo Electronico', class: "font-weight-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label 'Contraseña', class: "font-weight-bold" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label 'Recordar' %>
        </div>
      <% end %>
      <%= f.submit "Iniciar Sesion", class: "btn btn-dark btn-block" %>
      <div class="links mt-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>